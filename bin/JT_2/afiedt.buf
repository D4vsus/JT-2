DECLARE
	TYPE TSALARIOS IS TABLE OF EMP.SAL%TYPE INDEX BY BINARY_INTEGER;
	VSALARIOS TSALARIOS;
BEGIN
	SELECT MAX(SAL) INTO VSALARIOS(10)
	FROM EMP
	WHERE DEPTNO = 10;
	SELECT MAX(SAL) INTO VSALARIOS(20)
	FROM EMP
	WHERE DEPTNO = 20;
	SELECT MAX(SAL) INTO VSALARIOS(30)
	FROM EMP
	WHERE DEPTNO = 30;
	FOR I IN 0..30 LOOP
	DBMS_OUTPUT.PUT(VSALARIOS(I));
	END LOOP;
	DBMS_OUTPUT.NEW_LINE();
END;
/
